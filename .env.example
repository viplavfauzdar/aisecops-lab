# Provider switch: ollama | openai | anthropic
LLM_PROVIDER=ollama

# Ollama
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_CHAT_MODEL=qwen3:8b
OLLAMA_EMBED_MODEL=nomic-embed-text:latest
OLLAMA_TIMEOUT_SECONDS=180
# Explicit chat model (separate from embeddings)

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-latest

# App
APP_ENV=dev
AUDIT_LOG_PATH=/app/audit/audit.jsonl

# Tool policy
POLICY_PATH=/app/config/policy.yaml

# Postgres
DATABASE_URL=postgresql+psycopg://aisecops:aisecops@db:5432/aisecops
